{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Backend tests",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"python -m venv .venv && .venv\\Scripts\\python -m pip install -U pip && .venv\\Scripts\\pip install -e backend[dev] && .venv\\Scripts\\pytest -q backend"
			],
			"problemMatcher": [
				"$python"
			],
			"group": "build"
		},
		{
			"label": "Backend: pip install",
			"type": "shell",
			"command": "${command:python.interpreterPath}",
			"args": ["-m", "pip", "install", "-e", "backend[dev]"],
			"options": { "cwd": "${workspaceFolder}" },
			"problemMatcher": []
		},
		{
			"label": "Frontend: npm install",
			"type": "shell",
			"command": "npm",
			"args": ["install"],
			"options": { "cwd": "${workspaceFolder}/frontend" },
			"problemMatcher": []
		},
		{
			"label": "Docker: build image (test)",
			"type": "shell",
			"command": "docker",
			"args": ["build", ".", "-t", "httpintercepter:local"],
			"options": { "cwd": "${workspaceFolder}" },
			"problemMatcher": [],
			"presentation": {
				"reveal": "never",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
		}
	]
}